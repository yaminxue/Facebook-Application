<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/btn_style_alert_dialog_background"
    	android:layout_alignParentBottom="true"
    	android:id="@+id/setting_pop_layout"
        >
        <Button
            android:id="@+id/bottle_photo"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="25dip"
    		android:layout_marginRight="25dip"
    		android:layout_marginTop="15dip"
    		android:background="@drawable/register"
    		android:text="take picture"
    		android:textColor="#000000"
            />
        
        <Button
            android:id="@+id/bottle_localPic"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="25dip"
    		android:layout_marginRight="25dip"
    		android:layout_marginTop="15dip"
    		android:background="@drawable/register"
    		android:text="Choose local picture"
    		android:layout_below="@id/bottle_photo"
    		android:textColor="#000000"
            />
        
        <Button
            android:id="@+id/bottle_cancel"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="25dip"
    		android:layout_marginRight="25dip"
    		android:layout_marginTop="15dip"
    		android:background="@drawable/cencel_login"
    		android:text="cancel"
    		android:layout_below="@id/bottle_localPic"
    		android:textColor="#000000"
            />
        
    </RelativeLayout>
    

</RelativeLayout><!-- From: file:/Users/yamin/Documents/AndroidProjects/DriftBottle2/app/src/main/res/layout/bottle_setting_pop.xml -->